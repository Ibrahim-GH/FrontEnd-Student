
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>



<form action="/Students/Update">

    <input  name="Id" type="hidden"  value="@ViewBag.Students.Id"/>
    <div>
        <label for="Name">Name</label>
        <input name="Name" type="text" value="@ViewBag.Students.Name" />
    </div>

    <div>
        <label for="Age">Age</label>
        <input name="Age" type="number" value="@ViewBag.Students.Age" />
    </div>

    <button type="submit" class="btn btn-primary">update</button>

</form>



















